<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>PinPin </title>
    <link rel="stylesheet" href="/stylesheets/home.css">
    <script src="/javascripts/Controllers/ctrlBoards.js"></script>
</head>
{{#if logincheck}}
    <div class = "loading-board">
        <div class = "wrapper">
            <span class="loader"><span class="loader-inner"></span></span>
            <span class="loader-text">Welcome {{userFirstName}}!</span>
        </div>
    </div>
    <script>
        $(".loading-board").delay(5000).fadeOut(400);
    </script>
{{/if}}
<body id = "profile_background">
    <div class="bio">
        <div id="profile_photo"></div>
        <div id="name">{{userFirstName}} {{userLastName}}</div>
    </div>
    <div class="container" ng-controller="ctrlBoards">
        <div class="title">
            <a href="#">BOARDS (<%boards.length%>)</a>
        </div>
        <div class="container-box">
            <a href="#"><div class="element"><span class="glyphicon glyphicon-plus-sign" ng-click="openBoardFormModal('md', {BoardKey: 0},-1)" ></span></div></a>
            <div class="element" ng-repeat="board in boards">
                <div style="font-size: 24pt;"><a href="#" ng-click="openBoardFormModal('md', board, $index)"><%board.Name%></a></div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="title">
            <a href="#">PINS (#)</a>
        </div>
        <div class="container-box">
            <a href="#"><div class="element"><span class="glyphicon glyphicon-plus-sign"></span></div></a>
            <div class="element"></div>
            <div class="element"></div>
            <div class="element"></div>
        </div>
    </div>

</body>
</html>
