<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>PinPin </title>
    <link rel="stylesheet" href="/stylesheets/following.css">
    <script src="/javascripts/Controllers/ctrlFollowing.js"></script>
</head>
<body id = "following_background" ng-controller="ctrlFollowing" ng-init="init({{userKey}})">

    <div class="follow">
        <div class="section group" ng-repeat="following in followings">
            <div class="grid-row">
                <div class="col span_1_of_2">
                        <a ng-href="<% '/users/profile/'+ following.FollowingUserKey %>"><img ng-src="<% following.ProfilePicture || '/images/user5.png' %>" ng-cloak class="profile-photo"></a>
                        <a ng-href="<% '/users/profile/'+ following.FollowingUserKey %>"><div class="user-name"><% following.FirstName + ' ' + following.LastName %></div></a>
                </div>
                <div class="col span_1_of_2" ng-hide="following.UserKey != user.UserKey">
                    <div class="unfollow-button" ng-click="unfollow(following.FollowingUserKey, $index)">Unfollow</div>
                </div>
            </div>
        </div>
    </div>

    <script src="/javascripts/home.js"></script>
</body>
</html>
